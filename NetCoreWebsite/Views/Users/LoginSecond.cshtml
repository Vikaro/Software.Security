@model LoginSecondViewModel
@{
    ViewData["Title"] = "LoginSecond";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your second password:</h2>
<form asp-action="LoginSecondPOST" method="get" class="col-sm-12">
    @for (int i = 0; i < Model.PasswordMask.Count; i++)
    {
    <div class="form-group col-sm-2">
        <label asp-for="@Model.PasswordMask[i].Char" class="control-label"></label><label class="control-label">: @(i+1)</label>
        <input asp-for="@Model.PasswordMask[i].Char" class="form-control" disabled="@(Model.PasswordMask[i].Mask == true? "diabled" : null)" />
        <input asp-for="@Model.PasswordMask[i].Mask" hidden />
    </div>
    }
    <input hidden asp-for="@Model.UserId" />
    <div class="form-group col-sm-12">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>
