@model Software.Security.Models.Message.AllowedMessageViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-6">
    <div class="card">
        <div class="card-body">
            @*<h5 class="card-title">Special title</h5>*@
            <p class="card-text"> @Model.Message.Text </p>
        </div>
    </div>
</div>
@using (Html.BeginForm("CreatePost", "AllowedMessage", FormMethod.Get))
{
    <div class="form-horizontal">
        <h4>Add users allowed to edit message</h4>
        @Html.DropDownListFor(i => i.SelectedUser, new SelectList(Model.Users, "Value", "Text"))
        <hr />
        @Html.HiddenFor(i => i.Message.MessageId, new { @Name = "messageId" })

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<label>@ViewBag.Message</label>

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
